{
    "openapi": "3.0.0",
    "info": {
      "version": "0.1.0",
      "title": "Laravel API",
      "description": "API developed for the employee expense management system such as travel, accommodation, etc.",
      "contact": {
        "name": "Weydans Barros",
        "email": "weydans@hotmail.com",
        "url": "https://www.linkedin.com/in/weydans-barros-3bb71747/"
      },
      "license": {
        "name": "MIT",
        "url": "http://opensource.org/licenses/MIT"
      }
    },
    "servers": [
      {
        "url": "http://localhost:8080/api/v0/",
        "description": "API root path"
      }
    ],
    "paths": {
      "/login": {
        "post": {
          "summary": "return auth token to access app",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
				  "required": [
				    "email",
					"password"
				  ], 
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string",
                      "format": "password"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Success",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
					  					"data": {
												"type": "object",
												"properties": {
						  						"user": {
														"$ref": "#components/schemas/user"
						  						},
						  						"plainTextToken": {
						    						"type": "string",
														"example": "1|NQ4n8orGgQT8batMpFkRfyquJM1mcyZTfcx71234"
						  						}
												}
					  					}
                    }
                  }
                }
              }
            },
						"421": {
							"description": "Unprocessable",
							"content": {
								"application/json": {
									"schema": {
										"$ref": "#components/schemas/error_validation_response"
									}
								}
							}
						}
          },
          "tags": [
            "Login"
          ]
        }
      },
      "/expenses": {
        "get": {
          "summary": "Recover all expenses related to the current user",
          "responses": {
            "200": {
              "description": "Success",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Expenses"
                  }
                }
              }
            }
          },
          "security": [
            {
              "auth": []
            }
          ],
          "tags": [
            "Expenses"
          ]
        },
        "post": {
          "summary": "Create a new expense",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user_id": {
                      "type": "integer"
                    },
                    "description": {
                      "type": "string"
                    },
                    "date": {
                      "type": "string",
                      "format": "date"
                    },
                    "value": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Success",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Expense"
                  }
                }
              }
            }
          },
          "security": [
            {
              "auth": []
            }
          ],
          "tags": [
            "Expenses"
          ]
        }
      },
      "/expenses/{id}": {
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "schema": {
              "type": "integer"
            },
            "required": true
          }
        ],
        "get": {
          "summary": "Recover an espense",
          "responses": {
            "200": {
              "description": "Success",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Expense"
                  }
                }
              }
            },
            "403": {
              "description": "Forbiden",
              "content": {
                "application/json": {
                  "example": "Forbiden"
                }
              }
            },
            "404": {
              "description": "Expense not found",
              "content": {
                "application/json": {
                  "example": "Not found"
                }
              }
            }
          },
          "security": [
            {
              "auth": []
            }
          ],
          "tags": [
            "Expenses"
          ]
        },
        "put": {
          "summary": "Update an expense",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "description": {
                      "type": "string"
                    },
                    "date": {
                      "type": "string",
                      "format": "date"
                    },
                    "value": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Success",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Expense"
                  }
                }
              }
            },
            "403": {
              "description": "Forbiden",
              "content": {
                "application/json": {
                  "example": "Forbiden"
                }
              }
            }
          },
          "security": [
            {
              "auth": []
            }
          ],
          "tags": [
            "Expenses"
          ]
        },
        "delete": {
          "summary": "Remove an espense",
          "responses": {
            "204": {
              "description": "Success",
              "content": {
                "application/json": {
                  "example": "No content"
                }
              }
            },
            "403": {
              "description": "Forbiden",
              "content": {
                "application/json": {
                  "example": "Forbiden"
                }
              }
            }
          },
          "security": [
            {
              "auth": []
            }
          ],
          "tags": [
            "Expenses"
          ]
        }
      }
    },
    "components": {
      "schemas": {
        "Expense": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer"
            },
            "user_id": {
              "type": "integer"
            },
            "description": {
              "type": "string"
            },
            "date": {
              "type": "string",
              "format": "date"
            },
            "value": {
              "type": "number",
              "format": "float"
            },
            "created_at": {
              "type": "string",
              "format": "date-time"
            },
            "updated_at": {
              "type": "string",
              "format": "date-time"
            }
          }
        },
        "Expenses": {
          "type": "array",
          "items": {
            "$ref": "#/components/schemas/Expense"
          }
        },
				"user": {
					"type": "object",
					"properties": {
						"id": {
							"type": "integer",
							"example": 143
						},
						"name": {
							"type": "string",
							"example": "Airton Sena"
						},
						"email": {
							"type": "string",
							"example": "airton@email.com"
						},
						"created_at": {
							"type": "string",
							"example": "2023-05-02T21:18:24.000000Z"
						},
						"updated_at": {
							"type": "string",
							"example": "2023-05-02T21:18:24.000000Z"
						}
					}
				},
				"error_validation_response": {
					"type": "object",
					"properties": {
						"message": {
							"type": "string"
						},
						"errors": {
							"type": "object",
							"properties": {
								"field_1": {
									"type": "array",
									"example": ["Mensagem um", "Mensagem dois"]
								},"field_2": {
									"type": "array",
									"example": ["Mensagem um", "Mensagem dois"]
								}
							}
						}
					}
				},
				"unauthorized": {
					"type": "object",
					"properties": {
						"message": {
							"type": "string"
						}
					}
				}
      },
      "securitySchemes": {
        "auth": {
          "type": "http",
          "scheme": "bearer"
        }
      }
    },
    "tags": [
      {
        "name": "Login",
        "description": "Endpoint to make login"
      },
      {
        "name": "Expenses",
        "description": "Endponits to manage Expesnses"
      }
    ]
  }
